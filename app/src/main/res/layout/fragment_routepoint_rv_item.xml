<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView_image_poi"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:color/black" />

    <TextView
        android:id="@+id/textView_name_poi"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_alignEnd="@+id/imageView_state"
        android:layout_alignRight="@+id/imageView_state"
        android:layout_alignTop="@+id/imageView_image_poi"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/imageView_image_poi"
        android:layout_toRightOf="@+id/imageView_image_poi"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView_image_poi"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_alignTop="@+id/imageView_state"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:layout_toLeftOf="@+id/imageView_state"
        android:layout_toStartOf="@+id/imageView_state"
        android:text="Visited:"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_state"
        app:layout_constraintEnd_toStartOf="@+id/imageView_state"
        app:layout_constraintTop_toTopOf="@+id/imageView_state" />

    <ImageView
        android:id="@+id/imageView_state"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_alignBottom="@+id/imageView_image_poi"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_image_poi"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:color/background_dark" />
</RelativeLayout>